{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "name": "Debug Jest Tests",
        "request": "launch",
        "runtimeArgs": [
          "--inspect-brk",
          "${workspaceRoot}/node_modules/.bin/jest",
          "--runInBand",
          "--config=jest.config.js"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
      }
    ]
  }
  